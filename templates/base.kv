<MobileView>
    MainCard:
        name : "MobileMainCard"
        padding: "4dp"
        size: "240dp", "100dp"
    
        MDRelativeLayout:
            MDNavigationDrawer:
                pos_hint:{"top":.90, "bottom": 1, "left": 1}
                id: nav_drawer

                MDNavigationDrawerMenu:
                    MDNavigationDrawerItem:

                        pos_hint: {"top":.8, "bottom": 0.2}

                        MDNavigationDrawerItemLeadingIcon:
                            icon: "account"

                        MDNavigationDrawerItemText:
                            text: "Inbox"

                        MDNavigationDrawerItemTrailingText:
                            text: "24"

                    MDNavigationDrawerDivider:

            MDTopAppBar:
                type: "small"
                pos_hint:{"top":1, "bottom": 0.05, "left": .8, "right":1}

                MDTopAppBarLeadingButtonContainer:
        
                    MDActionTopAppBarButton:
                        icon: "dots-vertical"
                        on_release:
                            nav_drawer.set_state("toggle")
        
                MDTopAppBarTitle:
                    pos_hint: {"center_x": .5}
                    text: app.persian("فروشگاه خاص")
                    theme_font_name: "Custom"
                    font_name: "nasalization"
        
                MDTopAppBarTrailingButtonContainer:
        
                    MDActionTopAppBarButton:
                        icon: "attachment"
        
                    MDActionTopAppBarButton:
                        icon: "calendar"


